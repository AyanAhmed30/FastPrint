# FastPrint Backend Environment Configuration
# Copy this file to .env and update the values

# Django Configuration
DJANGO_SECRET_KEY=your-super-secret-key-here
DEBUG=False
EC2_PUBLIC_IP=your-ec2-public-ip

# Database Configuration
DB_NAME=fastprint_db
DB_USER=fastprint_user
DB_PASSWORD=your-secure-database-password
DB_ROOT_PASSWORD=your-secure-root-password
DB_HOST=db
DB_PORT=3306

# Email Configuration (for Django admin and notifications)
EMAIL_HOST_PASSWORD=your-email-password

# SSL Configuration (paths will be set by Certbot)
SSL_CERT_PATH=/etc/letsencrypt/live/app.fastprintguys.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/app.fastprintguys.com/privkey.pem

# Domain Configuration
DOMAIN=app.fastprintguys.com
